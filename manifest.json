{
  "manifest_version": 3,
  "name": "All In One Video Enhancer",
  "version": "0.1.0",
  "description": "AIVE floating video controls",

  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-minimal.js"],
      "css": ["styles/aive/panel.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
