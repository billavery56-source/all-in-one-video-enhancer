{
  "manifest_version": 3,
  "name": "All-in-One Video Enhancer (AIVE)",
  "version": "1.7.2",
  "description": "Overlay controls for any HTML5 video: filters, zoom, mirror, lights, reset, hotkeys, auto-fade, per-site blacklist.",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "contextMenus",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/brand-16.png",
    "32": "icons/brand-32.png",
    "48": "icons/brand-48.png",
    "128": "icons/brand-128.png",
    "256": "icons/brand-256.png",
    "512": "icons/brand-512.png"
  },

  "action": {
    "default_title": "Video Enhancer",
    "default_icon": {
      "16": "icons/brand-16.png",
      "32": "icons/brand-32.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "scripts/background.js"
  },

  "commands": {
    "inject_enhancer": {
      "suggested_key": { "default": "Alt+Shift+V" },
      "description": "Inject or activate Video Enhancer in the current tab"
    },
    "reset_enhancer": {
      "suggested_key": { "default": "Alt+Shift+R" },
      "description": "Reset all Video Enhancer settings on the current tab"
    },
    "toggle_sleep": {
      "suggested_key": { "default": "Alt+Shift+S" },
      "description": "Temporarily disable/enable Video Enhancer on this tab"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://*.netflix.com/*",
        "*://*.nflxvideo.net/*",
        "*://*.primevideo.com/*",
        "*://*.amazonvideo.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hulu.com/*",
        "*://*.max.com/*",
        "*://*.hbomax.com/*",
        "*://*.paramountplus.com/*",
        "*://*.peacocktv.com/*",
        "*://*.starz.com/*",
        "*://*.showtime.com/*",
        "*://*.crunchyroll.com/*"
      ],
      "js": ["scripts/content-minimal.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ]
}
