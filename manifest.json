{
  "manifest_version": 3,
  "name": "All-in-One Video Enhancer (AIVE)",
  "version": "1.8.0",
  "description": "Overlay controls for HTML5 video with per-site blacklist.",

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "icons": {
  "16": "icons/brand-16.png",
  "32": "icons/brand-32.png",
  "48": "icons/brand-48.png",
  "128": "icons/brand-128.png",
  "256": "icons/brand-256.png",
  "512": "icons/brand-512.png"
},
"action": {
  "default_title": "All-in-One Video Enhancer",
  "default_icon": {
    "16": "icons/brand-16.png",
    "32": "icons/brand-32.png"
  },
  "default_popup": "popup.html"
},

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["scripts/content-minimal.js"],
    "css": ["styles/aive/panel.css"],
    "run_at": "document_idle",
    "all_frames": true
  }
],

 "web_accessible_resources": [
  {
    "resources": [
      "icons/*.png",
      "icons/*.svg",
      "styles/*.css"
    ],
    "matches": ["<all_urls>"]
  }
]

}
